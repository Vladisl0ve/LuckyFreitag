<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ActivityNumber"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.Number">

    <android.support.v4.view.ViewPager
        android:id="@+id/frgmConteiner"
        android:layout_width="match_parent"
        android:layout_height="442dp"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/sumWins"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/wins_and_losses"
        android:textAlignment="center"
        android:textSize="30sp" />

</LinearLayout>